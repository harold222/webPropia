<section id="sec5" class="subscribe-us-area">
    <div class="container subscribe wow jackInTheBox" data-wow-offset="10">
        <div class="row">
            <div class="col-lg-12 text-center subscribe-title">
                <h4 class="text-uppercase mb-3">
                    Desea comunicarse con nosotros?
                </h4>
            </div>
        </div>

        <div class="d-sm-flex contCenter">
            <form action="" class="w-50">
                <div class="row d-flex flex-row flex-wrap formulario">

                    <div class="col input-textbox mb-3">
                        <input type="text" id="txtnombre" class="form-control" placeholder="Su nombre">
                    </div>

                    <div class="col input-textbox mb-3">
                        <input type="text" id="txtemail" class="form-control" placeholder="Su email" required>
                    </div>

                    <div class="form-group input-textbox ml-3">
